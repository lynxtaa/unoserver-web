{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2023",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "NodeNext",
		"sourceMap": true,
		"lib": ["es2023"],
		"outDir": "build",
		"types": ["vitest/globals"]
	},
	"include": ["src"]
}
